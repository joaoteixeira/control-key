                    <Image Source="./Images/key.png" Width="40" Margin="0 5" />

                    <StackPanel Margin="10 0">
                        <TextBlock Style="{StaticResource  KeyTextBox}">Labin 01</TextBlock>
                        <TextBlock Style="{StaticResource  KeyTextBox18}">Sala 05</TextBlock>
                    </StackPanel>
                </WrapPanel>
